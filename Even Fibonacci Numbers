#include <iostream>
using namespace std;

int sum_evenvaluedterms_fibonacci() {
    int i{1};
    int j{2};
    int sum{0};

    while (j <= 4000000) {
        if (j % 2 == 0) {
            sum += j;
        }
        int next = i + j;
        i = j;
        j = next;
    }
    return sum;
}

int main() {
   sum_evenvaluedterms_fibonacci();
 }
           
